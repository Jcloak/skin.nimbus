<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <variable name="TrailerSettingVar">
    <value condition="String.IsEqual(Skin.String(trailerSetting),0)">OFF</value>
    <value condition="String.IsEqual(Skin.String(trailerSetting),1)">ONE-CLICK</value>
    <value condition="String.IsEqual(Skin.String(trailerSetting),2)">AUTO</value>
		<value>OFF</value>
	</variable>

	<variable name="TrailerDelayTimeVar">
    <!-- <value condition="String.IsEmpty(Skin.String(waitInterval))">3 seconds</value> -->
    <value condition="String.IsEqual(Skin.String(waitInterval),0)">3 seconds</value>
    <value condition="String.IsEqual(Skin.String(waitInterval),1)">5 seconds</value>
    <value condition="String.IsEqual(Skin.String(waitInterval),2)">7 seconds</value>
    <value condition="String.IsEqual(Skin.String(waitInterval),3)">9 seconds</value>
    <value condition="String.IsEqual(Skin.String(waitInterval),4)">11 seconds</value>
    <value condition="String.IsEqual(Skin.String(waitInterval),5)">13 seconds</value>
    <value condition="String.IsEqual(Skin.String(waitInterval),6)">15 seconds</value>
    <value condition="String.IsEqual(Skin.String(waitInterval),7)">20 seconds</value>
    <value condition="String.IsEqual(Skin.String(waitInterval),8)">25 seconds</value>
    <value condition="String.IsEqual(Skin.String(waitInterval),9)">30 seconds</value>
	</variable>

	<variable name="TrailerSettingToggleVar">
		<value condition="String.IsEqual(Skin.String(trailerSetting),0)">Skin.SetString(trailerSetting,1)</value>
		<value condition="String.IsEqual(Skin.String(trailerSetting),1)">Skin.SetString(trailerSetting,2)</value>
		<value condition="String.IsEqual(Skin.String(trailerSetting),2)">Skin.SetString(trailerSetting,0)</value>
		<value>Skin.SetString(trailerSetting,0)</value>
	</variable>

	<variable name="TrailerDelayToggleVar">
		<!-- <value condition="String.IsEmpty(Skin.String(waitInterval))">Skin.SetString(waitInterval,1)</value> -->
		<value condition="String.IsEqual(Skin.String(waitInterval),0)">Skin.SetString(waitInterval,1)</value>
		<value condition="String.IsEqual(Skin.String(waitInterval),1)">Skin.SetString(waitInterval,2)</value>
		<value condition="String.IsEqual(Skin.String(waitInterval),2)">Skin.SetString(waitInterval,3)</value>
		<value condition="String.IsEqual(Skin.String(waitInterval),3)">Skin.SetString(waitInterval,4)</value>
		<value condition="String.IsEqual(Skin.String(waitInterval),4)">Skin.SetString(waitInterval,5)</value>
		<value condition="String.IsEqual(Skin.String(waitInterval),5)">Skin.SetString(waitInterval,6)</value>
		<value condition="String.IsEqual(Skin.String(waitInterval),6)">Skin.SetString(waitInterval,7)</value>
		<value condition="String.IsEqual(Skin.String(waitInterval),7)">Skin.SetString(waitInterval,8)</value>
		<value condition="String.IsEqual(Skin.String(waitInterval),8)">Skin.SetString(waitInterval,9)</value>
		<value condition="String.IsEqual(Skin.String(waitInterval),9)">Skin.SetString(waitInterval,0)</value>
	</variable>

	<variable name="TrailerDelayToggleVar">
    <value condition="String.IsEqual(Skin.String(trailerSetting),0)">Skin.SetString(trailerSetting,1)</value>
    <value condition="String.IsEqual(Skin.String(trailerSetting),1)">Skin.SetString(trailerSetting,2)</value>
    <value condition="String.IsEqual(Skin.String(trailerSetting),2)">Skin.SetString(trailerSetting,0)</value>
		<value>Skin.SetString(trailerSetting,0)</value>
	</variable>
</includes>